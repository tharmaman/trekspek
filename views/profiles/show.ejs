<% include ../partials/header %>

<div class="row">
    <div class="col-md-4">
        <div class="thumbnail">
            <h3 align="middle"><%=profile.username%></h3>
            <img id="profile-pic"class="img-thumbnail" src="<%= profile.avatar %>" alt="user profile image">
            <div align="middle" class="caption"> <%=profile.firstName%> <%=profile.lastName%> </div>
            <div align="middle" class="caption"><a  href="mailto:<%=profile.email%>"><%=profile.email%></a></div>
            <p align="middle" class="caption"><em><%=profile.bio%></em></p>
            <% if(currentUser && profile.username === currentUser.username || currentUser && currentUser.isAdmin) { %>
                <div align="middle"> 
                    <a class="btn btn-warning" href="/profiles/<%= profile.username %>/edit">Edit My Profile</a>
                </div>
            <% } %>
        </div>
    </div>
    <div class="col-md-8">
        <h3>Recent Treks</h3>
        <ul>
         <% treks.forEach(function(trek) { %>
            <li>
                <a href="/treks/<%= trek.id %>">
                    <%= trek.name %>
                </a>
            </li>
        <%  }); %>
        </ul>
    </div>
</div>

<% include ../partials/footer %>