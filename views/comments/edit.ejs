<% include ../partials/header %>

    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Edit Comment</h1>
            <br>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/treks/<%= trek_id %>/comments/<%=comment._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" value="<%= comment.text %>" name="comment[text]">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-success btn-block">Submit!</button>
                </div>
            </form>
            <a href="/treks">Go back</a>
        </div>
    </div>

<% include ../partials/footer %>