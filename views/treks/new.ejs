<% include ../partials/header %>

    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Create a New Trek</h1>
            <hr>
        </div>
        <div class="col-xs-12 col-sm-12 col-md-6 col-lg-6">
            <form action="/treks" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Trek Name</label>
                    <input class="form-control" type="text" placeholder='"Camp Crystal Lake"' name="name">
                </div>
                <div class="form-group custom-file">
                  <input type="file" class="custom-file-input" id="image" name="image" accept="image/*">
                  <label class="custom-file-label" for="image">Show us a picture!</label>
                </div>
                <br>
                <br>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder='"Yosemite National Park, USA"'>
                </div>
                <div class="form-group" id="ratediv">
                    <label for="rating">Rating</label>
                    <div class="rating">
                        <input type="radio" name="rating" id="star5" value="5"><label for="star5">
                        </label>
                        <input type="radio" name="rating" id="star4" value="4"><label for="star4">
                        </label>
                        <input type="radio" name="rating" id="star3" value="3"><label for="star3">
                        </label>
                        <input type="radio" name="rating" id="star2" value="2"><label for="star2">
                        </label>
                        <input type="radio" name="rating" id="star1" value="1"><label for="star1">
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="description">Experience</label>
                    <textarea rows="4" class="form-control" type="text" placeholder="Tell us all about it! :)" name="description" required></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/treks">Go back</a>
        </div>
    </div>
    
    <!-- Need to load before the script or else it won't show-->
    <script
        src="https://code.jquery.com/jquery-3.3.1.min.js"
        integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
        crossorigin="anonymous">
    </script>
    
    <script>
        $('#image').on('change',function(){
            //get the file name
            var fileName = $(this).val().split('\\').pop();
            //replace the "Choose a file" label
            $(this).next('.custom-file-label').html(fileName);
        })
    </script>
    
<% include ../partials/footer %>